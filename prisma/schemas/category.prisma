model Category {
    id           String  @id @default(uuid()) @db.VarChar(36)
    name         String  @db.VarChar(50)
    slug         String  @db.VarChar(255)
    description  String  @db.Text
    image        String  @db.VarChar(100)
    isDeprecated Boolean @default(false)

    products Product[]

    @@map("categories")
}
