model Discount {
    id String @id @default(uuid()) @db.VarChar(36)

    percent           Int
    maxAmount         Float
    flat              Int?
    maxAmountPerOrder Float @map("max_amount_per_order")

    createdAt DateTime  @default(now()) @map("created_at")
    updatedAt DateTime? @map("updated_at")
    deletedAt DateTime? @map("deleted_at")

    benefit Benefit?

    @@map("discounts")
}
