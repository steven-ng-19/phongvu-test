model Gallery {
    id        String @id @default(uuid()) @db.VarChar(36)
    productId String @db.VarChar(36)

    label String? @db.VarChar(50)
    url   String  @db.Text
    type  String?
    order Int     @default(0)

    product Product @relation(fields: [productId], references: [id])

    @@map("galleries")
}
